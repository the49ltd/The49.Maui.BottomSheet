<?xml version="1.0" encoding="utf-8" ?>
<the49:BottomSheet xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:the49="https://schemas.the49.com/dotnet/2023/maui"
             x:Class="The49.Maui.BottomSheet.Sample.DemoPages.TextSheet"
             HasHandle="True"
             Padding="16">
    <VerticalStackLayout Spacing="18">
        <Label 
            Text="Double trouble"
            FontSize="18"
            HorizontalOptions="Center" />
         <Label FontSize="16"
                x:Name="text"
            Text="Clicking on the button will definitely change the text"
            HorizontalOptions="Center" />
        <Button Text="I Understand" HorizontalOptions="Center" Clicked="Button_Clicked" />
    </VerticalStackLayout>
</the49:BottomSheet>

